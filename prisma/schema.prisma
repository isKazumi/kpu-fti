// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Type {
  bem
  si
  ti
}

model User {
    id String @id @default(uuid())
    npm String @unique
    name String
    prodi String
    password String
    token String @db.Text
}

model Pemilih {
  id String @id @default(uuid())
  name String
  npm String
  prodi String
  status_bem Boolean @default(false)
  status_hmp Boolean @default(false)
  id_paslon_bem String?
  id_paslon_hmp String?

  Paslon Transaction[]
}

model Paslon {
    id String @id @default(uuid())
    nama_paslon String
    no_urut String
    foto Bytes @db.Blob
    visi String
    misi String
    type Type

    Pemilih Transaction[]
}

model Transaction {
    paslon_id String
    pemilih_id String
    pemilih Pemilih @relation(fields: [pemilih_id],references: [id])
    paslon Paslon @relation(fields: [paslon_id],references: [id])

    @@id([pemilih_id,paslon_id])
}
